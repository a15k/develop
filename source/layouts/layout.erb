<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "a15k Developer Portal" %></title>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/swagger-ui/3.17.2/swagger-ui-bundle.js"></script>

    <link rel="stylesheet"
          href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/styles/default.min.css">

    <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js"></script>
        <script>hljs.initHighlightingOnLoad();</script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/highlightjs-themes@1.0.0/atelier-dune.light.css">
    <%= stylesheet_link_tag "https://cdnjs.cloudflare.com/ajax/libs/swagger-ui/3.17.2/swagger-ui.css" %>

    <%= stylesheet_link_tag webpack_asset_path "site.scss" %>
    <%= stylesheet_link_tag webpack_asset_path "custom.scss" %>


  </head>

  <body class="<%= page_classes %>">

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">a15k Developer Portal</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/intro">Introduction</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/tech">Tech Overview</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/items">Items</a>
            <% if false %>
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Items
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="/items/v1">v1</a>
            </div>
            <% end %>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/interactions">Interactions</a>
            <% if false %>
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Interactions
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="/interactions/v1">v1</a>
            </div>
            <% end %>
          </li>

        </ul>
      </div>
    </nav>

    <div class="container">
      <div class="col-md-12">
        <%= yield %>
      </div>
    </div>
    <%= javascript_include_tag webpack_asset_path "site.js" %>
    <%= yield_content :javascript %>
  </body>
</html>
