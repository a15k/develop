                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "assessment",
            "in": "body",
            "description": "Assessment to be created",
            "required": true,
            "schema": {
              "$ref": "#/definitions/AssessmentInput"
            }
          }
        ]
      }
    }
  },
  "definitions": {
    "Format": {
      "required": [
        "id",
        "name",
        "description"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "Assessment": {
      "required": [
        "id",
        "version",
        "visibility",
        "format_id",
        "content",
        "created_at"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "identifier": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "visibility": {
          "type": "string"
        },
        "format_id": {
          "type": "string",
          "format": "uuid"
        },
        "questions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Question"
          }
        }
      }
    },
    "Question": {
      "required": [
        "id",
        "content",
        "created_at",
        "varient",
        "format_id"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "format_id": {
          "type": "string",
          "format": "uuid"
        },
        "solutions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Solution"
          }
        },
        "assets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Asset"
          }
        }
      }
    },
    "Solution": {
      "required": [
        "id",
        "content",
        "created_at",
        "varient",
        "format_id"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "variant": {
          "type": "string"
        },
        "format_id": {
          "type": "string",
          "format": "uuid"
        },
        "assets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Asset"
          }
        }
      }
    },
    "Asset": {
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "string"
        }
      }
    },
    "FormatInput": {
      "allOf": [
        {
          "required": [
            "name",
            "description"
          ],
          "properties": {
            "name": {
              "type": "string",
              "description": "The name of the format"
            },
            "description": {
              "type": "string",
              "description": "A longer description that fully explains the format"
            }
          }
        }
      ]
    },
    "AssessmentInput": {
      "allOf": [
        {
          "required": [
            "format_id"
          ],
          "properties": {
            "identifier": {
              "type": "string",
              "description": "A unique identifier for the assessment, uuid is recommended but not required"
            },
            "format_id": {
              "type": "string",
              "format": "uuid",
              "description": "The uuid of a previously registered format"
            },
            "version": {
              "type": "string",
              "description": "The version for the assessment, an incrementing number is recommended, but any string value is allowed as long as it‘s unique within the scope of the identifier"
            },
            "content": {
              "type": "string",
              "description": "Content the applies to all questions and solutions.  The formatting the the content is indicated by the assessment's linked format"
            },
            "visibility": {
              "type": "string",
              "format": "uuid",
              "enum": [
                "internal",
                "external"
              ],
              "description": "If the assessment may be viewed by the public, or only by other a15k members.  Defaults to \"internal\""
            },
            "questions": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "format_id",
                  "content"
                ],
                "properties": {
                  "format_id": {
                    "type": "string",
                    "format": "uuid",
                    "required": true,
                    "description": "The uuid of a previously registered format"
                  },
                  "content": {
                    "type": "string",
                    "description": "Content of the question. Formatting of the content is indicated by the linked format"
                  },
                  "solutions": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": [
                        "format_id",
                        "content"
                      ],
                      "properties": {
                        "format_id": {
                          "type": "string",
                          "format": "uuid",
                          "required": true,
                          "description": "The uuid of a previously registered format"
                        },
                        "content": {
                          "type": "string",
                          "description": "Content of the solution. Formatting of the content is indicated by the linked format"
                        },
                        "variant": {
                          "type": "string",
                          "description": "A unique value shared with multiple solutions, allowing them to be linked together for auto-generated assessments"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      ]
    },
    "Error": {
      "properties": {
        "status_code": {
          "type": "integer",
          "description": "The HTTP status code"
        },
        "messages": {
          "type": "array",
          "description": "The error messages, if any",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}